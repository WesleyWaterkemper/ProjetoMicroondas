<Window x:Class="Microondas.CadastrarProgramas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microondas"
        mc:Ignorable="d"
        Title="CadastrarProgramas" Height="400" Width="600"
		Background="DarkCyan">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="59*"/>
			<RowDefinition Height="325*"/>
		</Grid.RowDefinitions>
		<Label Content="Cadastro de Programas de Aquecimento Customizavel:"
			   HorizontalAlignment="Center" VerticalAlignment="Top"
			   Margin="0,10,0,0"/>


		<Label Content="Nome:"
			   HorizontalAlignment="Left" VerticalAlignment="Top"
			   Margin="43,1,0,0" Width="44" Height="24" Grid.Row="1" />
		<TextBox Name="txtNome"
				 HorizontalAlignment="Left" VerticalAlignment="Top"
				 Margin="92,5,0,0" Width="100" Height="20" Grid.Row="1"/>

		<Label Content="Alimento:"
			   HorizontalAlignment="Left" VerticalAlignment="Top"
			   Margin="203,1,0,0" Width="65" Height="24" Grid.Row="1" />
		<TextBox Name="txtAlimento"
				 HorizontalAlignment="Left" VerticalAlignment="Top"
				 Margin="268,5,0,0" Width="100" Height="20" Grid.Row="1"/>

		<Label Content="Caracter:"
			   HorizontalAlignment="Left" VerticalAlignment="Top"
			   Margin="382,1,0,0" Width="56" Height="24" Grid.Row="1" />
		<TextBox Name="txtCaracter"
				 HorizontalAlignment="Left" VerticalAlignment="Top"
				 Margin="443,5,0,0" Width="100" Height="20" Grid.Row="1"/>




		<Label Content="Tempo (segundos)" 
	           HorizontalAlignment="Left" VerticalAlignment="Top" 
	           Margin="43,56,0,0" Height="24" Width="110" Grid.Row="1"/>
		<TextBox x:Name="txtTempo"
				 HorizontalAlignment="Left" VerticalAlignment="Top" 
				 Margin="153,60,0,0" Width="120" Height="20" Grid.Row="1"/>

		<Label Content="Potência (1-10)" 
			   HorizontalAlignment="Left" VerticalAlignment="Top" 
			   Margin="328,56,0,0" Height="24" Grid.Row="1"/>
		<TextBox x:Name="txtPotencia"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
				 Margin="423,60,0,0" Width="120" Height="20" Grid.Row="1"/>




		<Label Content="Instruções:"
			   HorizontalAlignment="Left" VerticalAlignment="Top" 
			   Margin="43,104,0,0"
			   Height="24" RenderTransformOrigin="0.525,1.377" Grid.Row="1"/>
		<TextBox x:Name="txtInstrucoes"
 				 HorizontalAlignment="Center" VerticalAlignment="Top"
				 Margin="0,133,0,0" Height="140" Width="500"
				 TextWrapping="Wrap" Grid.Row="1"/>


		<Button Content="Salvar"
				HorizontalAlignment="Left" VerticalAlignment="Top"
				Margin="43,278,0,0" Width="80" Height="24" Click="ButtonSalvar_Click" Grid.Row="1" />
		<Button Content="Deletar"
				HorizontalAlignment="Left" VerticalAlignment="Top"
				Margin="140,278,0,0" Width="80" Height="24" Click="ButtonDeletar_Click" Grid.Row="1" />
		<Button Content="Sair"
				HorizontalAlignment="Left" VerticalAlignment="Top"
				Margin="460,278,0,0" Width="80" Height="24" Click="ButtonSair_Click" Grid.Row="1" />
	</Grid>
</Window>
